pipeline {
    agent any

    stages {
        stage('Build') {
                steps{
            script{
                withEnv(['BUILD_ID=dontkill']) {
		    sh "npm install"
                    sh "nohup npm run start:dev"
		     sh "&"
                }
            }
        }
        }
          stage('Test') {
            steps {
                sh "curl https://localhost:3000"
            }
        }
    }
}
