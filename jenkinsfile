pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh "npm install"
                 withEnv ( ['JENKINS_NODE_COOKIE=do_not_kill'] ) {

                   bat "npm run start:dev &"
                }
            }
        }
          stage('Test') {
            steps {
                sh "curl https://localhost:3000"
            }
        }
    }
}
